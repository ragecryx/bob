= content content
  table.u-full-width
    thead
      tr
        th Title
        th Repo / Branch
        th Hook
        th Actions
    tbody
      {{$url_base := .url_base}}
      {{range .recipes}}
        tr
          td {{.title}}
          td {{.repo}} / {{.branch}}
          td {{$url_base}}/{{.title}}
          td
            button.button-primary Trigger
      {{end}}
